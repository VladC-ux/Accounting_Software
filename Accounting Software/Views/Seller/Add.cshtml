@using Accounting_Software.ViewModel;
@model SellerViewModel;
@{
    ViewData["Title"] = "Add";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: #333;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
            font-size: 36px;
            margin-bottom: 20px;
        }

        form {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            animation: fadeIn 1s ease-out;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-size: 18px;
            color: #34495e;
        }

        input[type="text"], input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 2px solid #3498db;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease-in-out;
        }

            input[type="text"]:focus, input[type="submit"]:hover {
                border-color: #2980b9;
                box-shadow: 0 0 8px rgba(41, 128, 185, 0.5);
            }

        input[type="submit"] {
            background-color: #3498db;
            color: #fff;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #2980b9;
            }

        div {
            margin-bottom: 15px;
        }

        @@keyframes fadeIn {
            0%

        {
            opacity: 0;
            transform: translateY(-30px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .seller-list div {
            padding: 8px;
            background-color: #ecf0f1;
            margin-bottom: 10px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .seller-list div:hover {
                background-color: #bdc3c7;
            }
    </style>
</head>
<body>
    <h1>Add new Seller</h1>
    <form method="post">
        <div>
            <label>
                Sellers Name
                <input asp-for="Name" type="text" />
            </label>
        </div>

        <div class="seller-list">
            @foreach (SellerViewModel item in ViewBag.Sellers)
            {
                <div>
                    @item.Name
                </div>
            }
        </div>

        <input type="submit" value="Save" />
    </form>
</body>
</html>
