@model Accounting_Software.ViewModel.UserViewModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Create User</h2>

        @if (ViewBag.UserCreated == true)
        {
            <div class="alert alert-success">
                <strong>Success!</strong> The user has been created successfully. You cannot create another user.
            </div>
        }
        else
        {
            <form method="post" asp-action="AddUser" asp-controller="User">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Enter your name" required />
                    <div class="invalid-feedback">
                        Please provide a valid name.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Create User</button>
            </form>
        }

        <div class="mt-4">
            <a class="btn btn-secondary" href="@Url.Action("Index", "Seller")">Back to Home</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>
</html>
