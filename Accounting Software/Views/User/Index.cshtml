@model Accounting_Software.ViewModel.UserViewModel

<!DOCTYPE html>
<html lang="en" style="margin: 0;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Balance</title>
    <style>
        @@keyframes fadeInBlur {
            from

        {
            opacity: 0;
            transform: translateY(30px);
            filter: blur(4px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
            filter: blur(0);
        }

        }

        body {
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(120deg, #1c1c1c, #2e2e2e);
            color: #f5f5f5;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            animation: fadeInBlur 1s ease-out;
            margin: 0;
        }

        .balance-container {
            background: #121212;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            padding: 40px;
            width: 380px;
            text-align: center;
            animation: fadeInBlur 1.2s ease-out;
            transition: all 0.3s ease;
        }

            .balance-container:hover {
                transform: scale(1.015);
                box-shadow: 0 20px 45px rgba(0, 0, 0, 0.6);
            }

            .balance-container h2 {
                margin-bottom: 20px;
                font-size: 1.9rem;
                color: #ffffff;
                letter-spacing: 1px;
            }

        .balance {
            font-size: 2.6rem;
            color: #28d17f;
            font-weight: bold;
            margin-bottom: 25px;
        }

        .button, .btn {
            display: inline-block;
            margin: 8px 5px;
            padding: 10px 24px;
            background: #444;
            color: #f5f5f5;
            border-radius: 10px;
            text-decoration: none;
            transition: all 0.3s ease;
            border: 1px solid #666;
        }

            .button:hover, .btn:hover {
                background: #28d17f;
                color: #121212;
                transform: translateY(-2px) scale(1.04);
                box-shadow: 0 8px 20px rgba(40, 209, 127, 0.3);
            }
    </style>
</head>
<body>
    <div class="balance-container">
        <h2>@Model.Name</h2>
        <div class="balance">
            @Model.Balance.ToString("C")
        </div>
        <a href="/Seller/Index" class="button">Back to Seller</a>
        @foreach (var user in ViewBag.Users)
        {
            <a asp-action="ProductsTransaction" asp-controller="User" asp-route-id="@user.Id" class="btn">View Transactions</a>
        }
    </div>
</body>
</html>
