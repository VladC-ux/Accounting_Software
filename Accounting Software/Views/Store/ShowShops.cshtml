@model List<Accounting_Software.ViewModel.StoreProductViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Products List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #1f1c2c, #928dab);
            color: white;
            font-family: 'Segoe UI', sans-serif;
        }

        h2 {
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .card-animated {
            animation: fadeInUp 0.7s ease-in-out;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .table thead th {
            background-color: #2c2f48;
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #44476a;
            transition: background-color 0.3s ease-in-out;
        }

        a.store-link {
            color: #00d4ff;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.2s;
        }

            a.store-link:hover {
                color: #00ffc3;
                text-shadow: 0 0 5px #00ffc3;
            }

        .btn-secondary {
            background-color: #3e3f5e;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #585a80;
            }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h2 class="mb-4 text-center">Store Products List</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table table-dark table-bordered rounded-4 shadow-lg card-animated">
                <thead>
                    <tr>
                        <th scope="col">Store Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var store in Model)
                    {
                        <tr>
                            <td>
                                <a class="store-link" href="@Url.Action("AddProductToStore", "Store", new { storeId = store.StoreId, productId = ViewBag.ProductId })">
                                    @store.StoreName
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning card-animated" role="alert">
                No shops found.
            </div>
        }

        <div class="text-center mt-4 card-animated">
            <a class="btn btn-secondary px-4 py-2" asp-action="Index" asp-controller="Seller">Back to Product List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
