@model List<Accounting_Software.ViewModel.StoreProductViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Products</title>
    <style>
      
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #2D2D2D;
            color: #E0E0E0;
        }

        .container {
            width: 80%;
            margin: auto;
            background-color: #333333;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 8px 15px white;
            animation: fadeInUp 1s ease-out;
        }

   
        @@keyframes fadeInUp {
            0%

        {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            animation: fadeIn 1.5s ease-in-out;
        }

        @@keyframes fadeIn {
            0%

        {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }

        }

        .header h1 {
            font-size: 2.5rem;
            color: #F1F1F1;
            font-weight: 700;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 30px;
            animation: fadeIn 1.5s ease-out;
        }

        table, th, td {
            border: 1px solid #444444;
            border-radius: 6px;
        }

        th, td {
            padding: 15px 20px;
            text-align: left;
        }

        th {
            background-color: #444444;
            color: #F1F1F1;
            font-weight: 600;
        }

        tr:nth-child(even) {
            background-color: #555555;
        }

        tr:hover {
            background-color: #666666;
            transition: background-color 0.3s ease;
        }

        .price {
            color: #4CAF50;
            font-weight: bold;
        }

        .actions a {
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 6px;
            margin: 0 5px;
            font-size: 1rem;
            display: inline-block;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .actions .edit {
            background-color: #F1C40F;
            color: #fff;
        }

            .actions .edit:hover {
                background-color: #E67E22;
                transform: translateY(-3px);
            }

        .actions .delete {
            background-color: #E74C3C;
            color: #fff;
        }

            .actions .delete:hover {
                background-color: #C0392B;
                transform: translateY(-3px);
            }

        .actions .sale {
            background-color: #27AE60;
            color: #fff;
        }

            .actions .sale:hover {
                background-color: #2ECC71;
                transform: translateY(-3px);
            }

        .actions form {
            display: inline;
        }

        .actions button {
            background-color: #E74C3C;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 8px 16px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .actions button:hover {
                background-color: #C0392B;
                transform: translateY(-3px);
            }

        .no-products {
            text-align: center;
            font-size: 1.5rem;
            color: #bbb;
            padding: 20px;
        }

       
        .actions-container {
            text-align: center;
            margin-top: 30px;
        }

            .actions-container .btn {
                padding: 10px 20px;
                border-radius: 6px;
                font-size: 1.1rem;
                transition: background-color 0.3s ease, transform 0.2s ease;
                text-decoration: none;
            }

            .actions-container .btn-success {
                background-color: #4CAF50;
                color: #fff;
            }

                .actions-container .btn-success:hover {
                    background-color: #45A049;
                    transform: translateY(-3px);
                }

            .actions-container .btn-secondary {
                background-color: #2980B9;
                color: #fff;
            }

                .actions-container .btn-secondary:hover {
                    background-color: #1F6DA1;
                    transform: translateY(-3px);
                }

    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Store Products</h1>
        </div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Store Name</th>
                    <th>Seller Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Mass</th>
                    <th>Unit of Mass</th>
                    <th>Count</th>
                    <th>Add Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.ProductName</td>
                            <td>@product.StoreName</td>
                            <td>@product.SellerName</td>
                            <td class="price">@product.Price.ToString("C")</td>
                            <td>@product.Description</td>
                            <td>@product.Mass</td>
                            <td>@product.unitOfmass</td>
                            <td>@product.Count</td>
                            <td class="date">@product.AddDate.ToString("yyyy-MM-dd")</td>
                            <td class="actions">
                                <a href="/Store/EditAllStore/@product.Id" class="edit">Edit</a>
                                @foreach (var item in ViewBag.Users)
                                {
                                    <a asp-controller="Store"
                                       asp-action="Sale"
                                       asp-route-id="@product.Id"
                                       asp-route-storeId="@product.StoreId"
                                       asp-route-userid="@item.Id"
                                       class="sale">
                                        Sale
                                    </a>
                                }

                                <form asp-action="DeleteStoreProduct" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <input type="hidden" name="Id" value="@product.Id" />
                                    <input type="hidden" name="ProductId" value="@product.ProductId" />
                                    <input type="hidden" name="StoreId" value="@product.StoreId" />
                                    <button type="submit" class="delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" class="no-products">No products available</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="actions-container">
            <a class="btn btn-secondary mt-2" asp-action="Index" asp-controller="Store">Back</a>
            
        </div>
    </div>
</body>
</html>
