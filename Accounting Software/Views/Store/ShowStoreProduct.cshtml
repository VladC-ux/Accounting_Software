@model List<Accounting_Software.ViewModel.StoreProductViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Products</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f7fc;
        }

        .container {
            width: 80%;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

            .header h1 {
                color: #333;
                font-size: 2rem;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        th {
            background-color: #007BFF;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .no-products {
            text-align: center;
            font-size: 1.2rem;
            color: #555;
            padding: 15px;
        }

        .price {
            color: #28a745;
        }

        .date {
            color: #6c757d;
        }

        .actions {
            text-align: center;
        }

            .actions a {
                text-decoration: none;
                padding: 6px 12px;
                border-radius: 4px;
                margin: 0 4px;
                font-size: 0.9rem;
            }

            .actions .edit {
                background-color: #ffc107;
                color: #fff;
            }

            .actions .delete {
                background-color: #dc3545;
                color: #fff;
            }

            .actions .sale {
                background-color: #28a745;
                color: #fff;
            }

            .actions form {
                display: inline;
            }

            .actions button {
                background-color: #dc3545;
                color: #fff;
                border: none;
                border-radius: 4px;
                padding: 6px 12px;
                cursor: pointer;
            }

                .actions button:hover {
                    background-color: #c82333;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Store Products</h1>
        </div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Store Name</th>
                    <th>Seller Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Mass</th>
                    <th>Unit of Mass</th>
                    <th>Count</th>
                    <th>Add Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.ProductName</td>
                            <td>@product.StoreName</td>
                            <td>@product.SellerName</td>
                            <td class="price">@product.Price.ToString("C")</td>
                            <td>@product.Description</td>
                            <td>@product.Mass</td>
                            <td>@product.unitOfmass</td>
                            <td>@product.Count</td>
                            <td class="date">@product.AddDate.ToString("yyyy-MM-dd")</td>
                            <td class="actions">
                                <a href="/Store/EditAllStore/@product.Id" class="edit">Edit</a>
                               <a href="/Store/Sale/@product.Id?storeId=@product.StoreId" class="sale">Sale</a>
                                <form asp-action="DeleteStoreProduct" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <input type="hidden" name="Id" value="@product.Id" />
                                    <input type="hidden" name="ProductId" value="@product.ProductId" />
                                    <input type="hidden" name="StoreId" value="@product.StoreId" />
                                    <button type="submit" class="delete">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" class="no-products">No products available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
