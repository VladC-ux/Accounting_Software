@model IEnumerable<Accounting_Software.Data.Entites.Store>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stores List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Roboto', sans-serif;
            overflow-x: hidden;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #343a40;
            text-align: center;
            animation: fadeIn 1s ease-out;
        }

        @@keyframes fadeIn {
            0%

        {
            opacity: 0;
            transform: translateY(50px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .table {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            animation: slideIn 1s ease-out;
            overflow: hidden;
        }

        @@keyframes slideIn {
            0%

        {
            opacity: 0;
            transform: translateX(-50px);
        }

        100% {
            opacity: 1;
            transform: translateX(0);
        }

        }

        .table th, .table td {
            padding: 15px;
            text-align: center;
        }

        .table th {
            background-color: dimgray;
            color: white;
            font-weight: 700;
        }

        .table td a {
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .btn {
            border-radius: 20px;
            transition: transform 0.2s ease, background-color 0.3s ease;
            font-weight: 500;
            padding: 6px 14px;
        }

            .btn:hover {
                transform: translateY(-2px);
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .btn-edit {
            background-color: #e0e0e0 !important;
            color: #000000 !important;
        }

            .btn-edit:hover {
                background-color: #d6d6d6 !important;
            }

        .btn-delete {
            background-color: #dc3545 !important;
            color: white !important;
        }

            .btn-delete:hover {
                background-color: #c82333 !important;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .container {
            margin-top: 40px;
            animation: fadeIn 1s ease-out;
        }

        .actions-container {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1><i class="fas fa-store"></i> Stores List</h1>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Store Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var store in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("ShowStoreProduct", "Store", new { storeId = store.Id })">@store.StoreName</a>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Store", new { id = store.Id })" class="btn btn-sm btn-edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("Delete", "Store", new { id = store.Id })" class="btn btn-sm btn-delete">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No stores available.</p>
        }

        <div class="actions-container">
            <a href="@Url.Action("Add", "Store")" class="btn btn-success"><i class="fas fa-plus"></i> Add New Store</a>
            <a href="@Url.Action("Index", "Seller")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Seller Index</a>
        </div>
    </div>

</body>
</html>
