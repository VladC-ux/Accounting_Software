@model IEnumerable<Accounting_Software.Data.Entites.Store>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stores List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Stores List</h1>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var store in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("AddProductsToStore", "Product", new { storeId = store.Id })">@store.StoreName</a>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Store", new { id = store.Id })" class="btn btn-sm btn-primary">Edit</a>
                                <a href="@Url.Action("Delete", "Store", new { id = store.Id })" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No stores available.</p>
        }

        <a href="@Url.Action("Add", "Store")" class="btn btn-success">Add New Store</a>
        <a href="@Url.Action("Index", "Seller")" class="btn btn-secondary mt-3">Back to Seller Index</a>
    </div>
</body>
</html>
