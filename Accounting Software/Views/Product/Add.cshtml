@using Accounting_Software.ViewModel;
@model ProductViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Product</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #f0f4f7, #ffffff);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            animation: fadeIn 1s ease-in;
        }

        .container {
            background-color: #ffffff;
            margin-top: 60px;
            padding: 35px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 1s ease-in;
        }

        h1 {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 30px;
            text-align: center;
            font-size: 2rem;
        }

        .form-group label {
            font-weight: 500;
            color: #34495e;
        }

        .form-control {
            font-size: 0.9rem;
        }

        .btn-primary {
            background-color: #2980b9;
            border-color: #2980b9;
            transition: all 0.3s ease-in-out;
            font-weight: 500;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background-color: #1d6f99;
                border-color: #1d6f99;
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #7f8c8d;
            border-color: #7f8c8d;
            transition: all 0.3s ease-in-out;
            font-weight: 500;
            border-radius: 8px;
        }

            .btn-secondary:hover {
                background-color: #5d6d7e;
                border-color: #5d6d7e;
                transform: scale(1.05);
            }

        table {
            margin-top: 30px;
            animation: fadeIn 1s ease-in;
        }

        th {
            background-color: #2c3e50;
            color: white;
        }

        td, th {
            text-align: center;
            padding: 12px;
        }

        .alert {
            animation: fadeIn 0.8s ease-in;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        @@media (max-width: 768px) {
            .container

        {
            padding: 20px;
        }

        h1 {
            font-size: 22px;
        }

        }

        .form-control.description,
        .form-control.unit-of-mass {
            height: 38px; /* уменьшенная высота */
            font-size: 0.9rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <h1>Add New Product</h1>

        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Name">Product Name</label>
                    <input asp-for="Name" class="form-control" required />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control description" required />
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Mass">Mass</label>
                    <input asp-for="Mass" class="form-control" min="1" required />
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Count">Count</label>
                    <input asp-for="Count" class="form-control" min="1" required />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="unitOfmass">Unit of Mass</label>
                <select asp-for="unitOfmass" class="form-control unit-of-mass" required>
                    <option value="Kg">Kg</option>
                    <option value="Gram">Gram</option>
                    <option value="Ml">Ml</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save Product</button>
            <a asp-action="Index" asp-controller="Seller" class="btn btn-secondary ml-2">Back to Index</a>
        </form>

        @if (ViewBag.Products != null)
        {
            <h2 class="mt-5 mb-3 text-center" style="color: #2c3e50;">Added Products</h2>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Mass</th>
                        <th>Unit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ProductViewModel item in ViewBag.Products)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("F2")</td>
                            <td>@item.Description</td>
                            <td>@item.Mass</td>
                            <td>@item.unitOfmass</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $('form').on('submit', function () {
            setTimeout(function () {
                $('form')[0].reset();
            }, 100);
        });
    </script>
</body>
</html>
