@using Accounting_Software.ViewModel
@model ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow rounded-4">
            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0">Edit Product</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="SellerId" />

                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Product Name" required />
                        <label asp-for="Name">Product Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" placeholder="Price" min="1" required />
                        <label asp-for="Price">Price ($)</label>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6 form-floating">
                            <input asp-for="Mass" class="form-control" placeholder="Mass" min="1" required />
                            <label asp-for="Mass">Mass</label>
                        </div>
                        <div class="col-md-6 form-floating">
                            <select asp-for="unitOfmass" class="form-select" required>
                                <option value="Kg">Kg</option>
                                <option value="Gram">Gram</option>
                                <option value="Ml">Ml</option>
                            </select>
                            <label asp-for="unitOfmass">Unit</label>
                        </div>
                    </div>

                    <div class="form-floating mb-4">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                        <label asp-for="Description">Description</label>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="ShowSellerProduct" asp-controller="Product" asp-route-SellerId="@Model.SellerId" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-success px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
